# Server
NODE_ENV=development
PORT=4001
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/movenow_orders?schema=public

# Redis (for idempotency and caching)
REDIS_URL=redis://localhost:6379

# Kafka (message broker)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=orders-service
KAFKA_GROUP_ID=orders-service-group

# Service URLs (for tRPC clients)
PRICING_SERVICE_URL=http://localhost:4002/trpc
PAYMENTS_SERVICE_URL=http://localhost:4003/trpc

# Metrics
METRICS_PORT=9090

# Idempotency
IDEMPOTENCY_TTL_SECONDS=86400

# CORS
CORS_ORIGIN=http://localhost:3000

# JWT Secret (for auth verification)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

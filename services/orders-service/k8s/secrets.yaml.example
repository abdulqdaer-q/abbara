# This is an example file. Create the actual secret with:
# kubectl create secret generic orders-service-secrets \
#   --from-literal=database-url='postgresql://user:pass@host:5432/db' \
#   --from-literal=jwt-secret='your-secret-key'

apiVersion: v1
kind: Secret
metadata:
  name: orders-service-secrets
type: Opaque
stringData:
  database-url: "postgresql://postgres:password@postgres-service:5432/movenow_orders"
  jwt-secret: "change-this-in-production"

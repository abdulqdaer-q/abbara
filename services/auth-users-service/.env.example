# Application Environment
NODE_ENV=development
PORT=3001
SERVICE_NAME=auth-users-service

# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL=postgresql://user:password@localhost:5432/movenow_auth

# Redis Configuration
# Redis connection string for session storage and rate limiting
REDIS_URL=redis://localhost:6379

# JWT Configuration
# Secret keys for signing JWT tokens (minimum 32 characters recommended)
JWT_ACCESS_SECRET=your-access-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars

# JWT token expiry times (examples: 15m, 1h, 7d)
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# JWT signing algorithm (RS256 recommended for production, HS256 for development)
JWT_ALGORITHM=RS256

# RSA Keys for RS256 (optional, required if using RS256)
# Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
# JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----...-----END RSA PRIVATE KEY-----
# JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----...-----END PUBLIC KEY-----

# Password Hashing (Argon2id)
# Memory cost in KB (64 MB default)
ARGON2_MEMORY_COST=65536
# Time cost (iterations)
ARGON2_TIME_COST=3
# Parallelism (threads)
ARGON2_PARALLELISM=4

# Password Reset
# Token expiry time (examples: 1h, 30m)
PASSWORD_RESET_TOKEN_EXPIRY=1h

# Rate Limiting
# Time window in milliseconds (15 minutes default)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=5

# Message Bus Configuration
# Type: kafka or rabbitmq
MESSAGE_BUS_TYPE=kafka

# Kafka Configuration
# Comma-separated list of Kafka brokers
KAFKA_BROKERS=localhost:9092
# Kafka client ID
KAFKA_CLIENT_ID=auth-users-service
# Topic prefix for all events
KAFKA_TOPIC_PREFIX=movenow

# RabbitMQ Configuration (optional, if using RabbitMQ instead of Kafka)
# RABBITMQ_URL=amqp://user:password@localhost:5672

# Social Login (Optional)
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Firebase (Optional)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# Monitoring and Metrics
# Enable Prometheus metrics endpoint
ENABLE_METRICS=true
# Metrics server port
METRICS_PORT=9090

# Logging
# Log level: error, warn, info, debug
LOG_LEVEL=info

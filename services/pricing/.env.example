# Service Configuration
PORT=3002
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/movenow_pricing

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL_SECONDS=3600

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPS_PROVIDER_ENABLED=true
DISTANCE_CACHE_TTL_SECONDS=86400

# Pricing Configuration
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.08
DEFAULT_SERVICE_FEE_RATE=0.05
MIN_FARE_CENTS=500
MAX_SURGE_MULTIPLIER=3.0
FALLBACK_SPEED_KMH=40

# Rate Limiting
ESTIMATE_RATE_LIMIT_PER_MINUTE=100

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
ADMIN_API_KEY=your_admin_api_key_here_change_in_production

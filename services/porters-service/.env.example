# Server Configuration
NODE_ENV=development
PORT=4002
SERVICE_NAME=porters-service

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/movenow_porters
DATABASE_REPLICA_URL=postgresql://postgres:postgres@localhost:5432/movenow_porters_read

# Redis
REDIS_URL=redis://localhost:6379
REDIS_SESSION_DB=0
REDIS_AVAILABILITY_DB=1
REDIS_LOCATION_DB=2

# Kafka / Message Broker
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=porters-service
KAFKA_GROUP_ID=porters-service-group
KAFKA_TOPIC_PREFIX=movenow

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=movenow-auth-service
JWT_AUDIENCE=movenow-services

# External Services
FILES_SERVICE_URL=http://localhost:4010
WALLETS_SERVICE_URL=http://localhost:4004
NOTIFICATIONS_SERVICE_URL=http://localhost:4006
AUTH_SERVICE_URL=http://localhost:4001

# Rate Limiting
LOCATION_UPDATE_RATE_LIMIT=10
LOCATION_UPDATE_WINDOW_SECONDS=1

# Job Offer Configuration
JOB_OFFER_TIMEOUT_SECONDS=30
MAX_CONCURRENT_OFFERS_PER_PORTER=3

# Availability Configuration
AVAILABILITY_CACHE_TTL_SECONDS=300

# Location Configuration
LOCATION_SNAPSHOT_INTERVAL_SECONDS=60
LOCATION_HISTORY_RETENTION_DAYS=90

# Metrics & Observability
METRICS_PORT=9090
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Admin Configuration
ADMIN_API_KEY=your-admin-api-key-change-in-production

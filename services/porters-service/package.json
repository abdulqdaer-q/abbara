{
  "name": "@movenow/porters-service",
  "version": "1.0.0",
  "description": "MoveNow Porters Service - Manages porter accounts, verification, availability, job acceptance, and earnings",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && prisma generate",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src tests --ext .ts",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "keywords": ["trpc", "porters", "microservices", "movenow"],
  "author": "MoveNow Team",
  "license": "MIT",
  "dependencies": {
    "@trpc/server": "^10.45.0",
    "@prisma/client": "^5.8.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.12",
    "kafkajs": "^2.2.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "superjson": "^2.2.1",
    "prom-client": "^15.1.0",
    "express-rate-limit": "^7.1.5",
    "bullmq": "^5.1.5",
    "geolib": "^3.3.4",
    "nanoid": "^3.3.7"
  },
  "devDependencies": {
    "@movenow/common": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "supertest": "^6.3.3",
    "prisma": "^5.8.0",
    "redis-memory-server": "^0.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

# Service Configuration
NODE_ENV=development
PORT=3005
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/notification_service?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# RabbitMQ / Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672
EVENT_QUEUE_NAME=movenow.events

# Push Notifications - Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=your-firebase-project-id
FCM_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FCM_PRIVATE_KEY=your-private-key

# Email Service (Optional - Nodemailer SMTP)
EMAIL_ENABLED=false
EMAIL_FROM=notifications@movenow.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Service (Optional - Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Notification Settings
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=1000
NOTIFICATION_BATCH_SIZE=100
RATE_LIMIT_PER_USER_PER_MINUTE=10
DEDUPLICATION_WINDOW_SECONDS=300

# Message Retention
MESSAGE_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# CORS
CORS_ORIGIN=http://localhost:3000

# Health Check
HEALTH_CHECK_INTERVAL_MS=30000

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/movenow_bidding?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=bidding-service
KAFKA_GROUP_ID=bidding-service-group

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Bidding Configuration
DEFAULT_BIDDING_WINDOW_DURATION_SEC=300
DEFAULT_MIN_BID_CENTS=1000
DEFAULT_STRATEGY_ID=weighted-score-v1
MAX_BIDS_PER_PORTER=5
BID_ACCEPTANCE_LOCK_TTL_SEC=30

# Observability
LOG_LEVEL=info
METRICS_PORT=9090
ENABLE_TRACING=true
OTEL_EXPORTER_ENDPOINT=http://localhost:4318

# Data Retention
BID_RETENTION_DAYS=90
AUDIT_RETENTION_DAYS=365

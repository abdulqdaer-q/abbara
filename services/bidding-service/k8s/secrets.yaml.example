# Example secrets file - DO NOT commit actual secrets to git
# Create actual secrets using kubectl or your secret management solution

apiVersion: v1
kind: Secret
metadata:
  name: bidding-service-secrets
  namespace: movenow
type: Opaque
stringData:
  # Database connection
  database-url: "postgresql://username:password@postgres-service:5432/movenow_bidding?schema=public"

  # Redis password
  redis-password: "your-redis-password"

  # JWT secret (minimum 32 characters)
  jwt-secret: "your-jwt-secret-key-change-in-production-minimum-32-chars"

  # Optional: OTEL exporter endpoint for tracing
  otel-exporter-endpoint: "http://otel-collector:4318"

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-here-change-in-production
JWT_SOCKET_SECRET=your-socket-secret-key-here-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_SOCKET_EXPIRY=24h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=movenow:realtime:

# Kafka/Message Broker Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=realtime-gateway
KAFKA_GROUP_ID=realtime-gateway-group
KAFKA_CONSUMER_SESSION_TIMEOUT=30000
KAFKA_CONSUMER_HEARTBEAT_INTERVAL=3000

# Kafka Topics
KAFKA_TOPIC_ORDER_EVENTS=order-events
KAFKA_TOPIC_PORTER_EVENTS=porter-events
KAFKA_TOPIC_NOTIFICATION_EVENTS=notification-events
KAFKA_TOPIC_CHAT_EVENTS=chat-events

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60
RATE_LIMIT_LOCATION_POINTS=1000
RATE_LIMIT_LOCATION_DURATION=60
RATE_LIMIT_CHAT_POINTS=50
RATE_LIMIT_CHAT_DURATION=60

# Location Updates
LOCATION_SAMPLE_RATE=10
LOCATION_TTL=3600

# Session Management
SESSION_TTL=86400
SUBSCRIPTION_TTL=86400

# Logging
LOG_LEVEL=info
SERVICE_NAME=realtime-gateway

# Monitoring
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Performance
MAX_CONNECTIONS=10000
MAX_PAYLOAD_SIZE=1048576
PING_TIMEOUT=20000
PING_INTERVAL=25000

# Security
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=
